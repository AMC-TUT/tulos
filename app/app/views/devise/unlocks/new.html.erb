<%= simple_form_for(resource, :as => resource_name, :html => { :method => :post, :class => 'form-signin' }, :url => unlock_path(resource_name) ) do |f| %>
  <h2 class="form-signin-heading">Resend unlock instructions</h2>

  <%= bootstrap_flash %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

  <%= f.text_field :email, :required => true, autofocus: true, class: 'form-control', placeholder: 'Email' %>

  <%= f.button :submit, "Resend unlock instructions", :class => 'btn btn-large btn-primary' %>
  <hr>
  <%= render "devise/shared/links" %>
<% end %>