<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'form-signin', :method => :put }) do |f| %>
  <h2 class="form-signin-heading">Change your password</h2>

  <%= bootstrap_flash %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.password_field :password, class: 'form-control', placeholder: 'New password', :autocomplete => "off", :required => true, :autofocus => true %>
  <%= f.password_field :password_confirmation, :required => true, class: 'form-control', placeholder: "Confirm your new password", :autocomplete => "off" %>

  <%= f.button :submit, "Change my password", :class => 'btn btn-large btn-primary' %>
  <hr>
  <%= render "devise/shared/links" %>
<% end %>