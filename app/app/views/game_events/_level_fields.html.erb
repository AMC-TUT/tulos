<legend>Level</legend>

<div class="row">
  <div class="col-sm-6">
    <div class="control-group">
      <%= f.label :level_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :level_type, :class => 'form-control', required: true, :min => 1, :max => 3, :value => 1 %>
        <p class="help-block">Type options: 1. Single number, 2. Plus task, 3. Minus task.</p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="control-group">
      <%= f.label :level_format, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :level_format, :class => 'form-control', :min => 0, :max => 1, :value => 0 %>
        <p class="help-block">Format options: 0. Fraction number, 1. Decimal number.</p>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-sm-4">
    <div class="control-group">
      <%= f.label :solved, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :solved, :class => 'form-control', :min => 0 %>
        <p class="help-block">Timestamp.</p>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="control-group">
      <%= f.label :skip, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :skip, :class => 'form-control', :min => 0 %>
        <p class="help-block">Timestamp.</p>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="control-group">
      <%= f.label :trap, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :trap, :class => 'form-control', :min => 0 %>
        <p class="help-block">Timestamp.</p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-4">
    <div class="control-group">
      <%= f.label :jumps, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :jumps, :class => 'form-control', :min => 0, :value => 0 %>
        <p class="help-block">Jump count.</p>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="control-group">
      <%= f.label :distance, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :distance, :class => 'form-control', :min => 0, :value => 0 %>
        <p class="help-block">Walked and jumped distance.</p>
      </div>
    </div>
  </div>
</div>

<legend>Answers</legend>

<%= f.fields_for :game_level_answers do |builder| %>
<%= render "answer_fields", :f => builder %>
<% end %>

<hr>
