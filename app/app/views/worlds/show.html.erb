<div class="row">
  <div class="col-sm-12">
    <h1>World</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Player (position)</th>
          <th>Created at</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @world.title %></td>
          <td><%= @world.description %></td>
          <td><%= @world.player %></td>
          <td><%=l @world.created_at %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <h1>Levels</h1>

    <% if @world.levels.blank? %>
    <%= render :partial => 'shared/empty' %>
    <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Level type</th>
          <th>Level format</th>
          <th>Question</th>
          <th>Answer</th>
          <th>Trap</th>
        </tr>
      </thead>

      <tbody>
        <% @world.levels.each do |level| %>
        <tr>
          <td>
            <% if level.level_type == 1 %>
            Single number
            <% elsif level.level_type == 2 %>
            Plus task
            <% else %>
            Minus task
            <% end %>
          </td>
          <td>
            <% if level.level_format == 0 %>
            Fraction
            <% else %>
            Decimal
            <% end %>
          </td>
          <td>
            <% if level.level_format == 0 %>
              <% if level.level_type == 0 %>
                <%= "#{level.number[0].denominator}/#{level.number[0].numerator}" %>
              <% else %>
                <%= "0,#{level.numbers[0].denominator}" %>
              <% end %>
            <% else %>
             laskutehtava
            <% end %>
          </td>
          <td>
            <% if level.level_format == 0 %>
            <%= "#{level.answer.denominator}/#{level.answer.numerator}" %>
            <% else %>
            <%= "0,#{level.answer.denominator}" %>
            <% end %>
          </td>
          <td>
            <% if level.level_format == 0 %>
            <%= "#{level.trap.denominator}/#{level.trap.numerator}" %>
            <% else %>
            <%= "0,#{level.trap.denominator}" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>

    <br>

    <%= link_to 'Edit World', edit_world_path(@world), :class => 'btn btn-primary' %>
    <%= link_to 'Back', worlds_path, :class => 'btn btn-default' %>
  </div>
</div>
